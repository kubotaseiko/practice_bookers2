<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/4c89741d8a.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <span>Bookers</span>
        </a>
      <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li><%= link_to "Home", user_path(current_user.id), class: "nav-link text-light fas fa-home" %></li>
        <li><%= link_to "Users", users_path, class: "nav-link text-light fas fa-users" %></li>
        <li><%= link_to "Books", books_path, class: "nav-link text-light fas fa-book-open" %></li>
        <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "nav-link text-light fas fa-users" %></li>
      <% else %>
        <li><%= link_to "Home", root_path, class: "nav-link text-light fas fa-home" %></li>
        <li><%= link_to "About", home_about_path, class: "nav-link text-light fas fa-link" %></li>
        <li><%= link_to "sign up", new_user_registration_path, class: "nav-link text-light fas fa-user-plus" %></li>
        <li>
          <%= link_to "login", new_user_session_path, class: "nav-link text-light fas fa-sign-in-alt" %>
        </li>
      <% end %>
      </ul>
    </div>
    </nav>
    </header>

    <p id="notice"></p>
    <div class="container">
      <div class="container px-5 px-sm-0">
          <%= yield %>
      </div>
    </div>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>
