<div class="row">
<%= render 'layouts/errors', book: @book %>
<div class="col-md-3">
  <%= render 'users/info', user: current_user %>
  <%= render 'users/form', book: @book %>
</div>
    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr><% @users.each do |user| %>
            <td>
                <%= attachment_image_tag user, :profile_image_id, :fill, 40, 40, format: 'jpeg', fallback: "no-image-icon.jpg" %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user) %></td>
          </tr><% end %>
        </tbody>
      </table>
    </div>
</div>